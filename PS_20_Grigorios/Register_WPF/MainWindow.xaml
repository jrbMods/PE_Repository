<Window x:Class="Register_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Register_WPF"
        Title="Registration Form" Height="350" Width="500">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="User Name:"/>
            <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <Label Content="Age:"/>
            <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <Label Content="Email:"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <Button Content="Register" Command="{Binding RegisterButtonClicked}" />
            <Button Content="Reset" Command="{Binding ResetButtonClicked}" />
        </StackPanel>
    </Grid>
</Window>
